{
  "name": "Telegram Escrow Bot",
  "description": "Advanced Telegram Escrow Bot with MongoDB support",
  "repository": "https://github.com/chaudharyji0805-bot/ESCROW",
  "keywords": [
    "telegram",
    "escrow",
    "bot",
    "telethon",
    "mongodb",
    "heroku"
  ],
  "env": {
    "BOT_TOKEN": {
      "description": "Telegram Bot Token from @BotFather",
      "required": true
    },
    "API_ID": {
      "description": "Telegram API ID from my.telegram.org",
      "required": true
    },
    "API_HASH": {
      "description": "Telegram API HASH from my.telegram.org",
      "required": true
    },
    "OWNER_ID": {
      "description": "Telegram User ID of Bot Owner",
      "required": true
    },
    "MONGO_URI": {
      "description": "MongoDB connection string (mongodb+srv://...)",
      "required": true
    },
    "LOG_CHANNEL": {
      "description": "Log channel ID (recommended: -100xxxxxxxxxx)",
      "required": false
    }
  },
  "formation": {
    "worker": {
      "quantity": 1,
      "size": "eco"
    }
  },
  "stack": "heroku-22"
}
